<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Buy Nike</title>
    <link rel="stylesheet" href="/public/styles/main.css">
    </head>
<body>

          <!-- Inicio el header -->
    <header class="header">
        <!-- Elementos del header -->

        <!-- Logo -->
        <!-- Navegacion Principal -->
        <a href="#"> <img class="header__logo" src="images/lgo_header.png" alt=""></a>

        <nav class="header__list listnav">
            <a href="#banner" class="listnav__a">NEW RELEASES</a>
            <a class="listnav__a store">SHOP</a>
            <a href="#presentation" class="listnav__a">KNOW</a>
            <a href="#characteristic" class="listnav__a">FOR YOU</a>
            <a href="#gallery" class="listnav__a">GALLERY</a>
        </nav>

         <button class="header__btn">
            <img src="/public/images/tienda.png" alt="">
        </button>

        <button class="header__btn">
            <img src="/public/images/buscar.png" alt="">
        </button>

        {{!-- Responsive --}}
        <button class="header__btn">
            <img src="/public/images/menu.png" alt="">
        </button>
    </header>

 {{!-- Navegacion contextual --}}
        <section class="contextual">
            <a href="'/store/MEN" class="contextual__a">MEN</a>
            <a href="'/store/WOMAN" class="contextual__a">WOMAN</a>
            <a href="'/store/KID" class="contextual__a">KID</a>
        </section>       
            
            <div class="products__store">


                {{#each productsList}}

                     <article class="product">
                        <!-- Imagen del producto -->
                        <img class="individual__image" src="/images/{{this.images.[0]}}">
                        <!-- Detalles del producto -->
                        <section class="individual__top">
                                <h1 class="individual__header"> {{this.name}}</h1>
                                <h2 class="individual__header"> {{this.category}}</h2>
                                <p class="individual__header">{{this.colors}}</p>
                                <h1 class="individual__header">{{this.price}}</h1>
                        </section>
                    </article>
                      <button class="producto__Like">
                           <img src="/public/images/like.png" alt="">
                      </button>
            </div>
          
                 {{/each}}
    <!--Archivos de javaScript -->
    <script src="https://unpkg.com/scrollreveal/dist/scrollreveal.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script src="/script/script2.js"></script>
    <script src="/script/script3.js"></script>
    

</body>
</html>