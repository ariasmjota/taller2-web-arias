<section class="products__store">


    {{#each productsList}}

    <a href="/store/{{this.name}}" class="product">
        <!-- Detalles del producto -->

        {{!-- Imagen del producto --}}
        <img class="product__image" src="/images/{{this.images.[0]}}">

        {{!-- Informacion del producto  --}}
        <section class="product__top top">
            <article class="top__rigth">
                <h1 class="product__header"> {{this.name}}</h1>
                <h2 class="product__header"> {{this.category}}</h2>
                <p class="product__header">{{this.colors}}</p>
            </article>
            <article class="top__left">
                <h1 class="product__header">{{this.price}}</h1>
            </article>
        </section>
        <section class="product__bottom">
            <button class="product__Like">
                <img src="/images/like.png" alt="">
            </button>
            <button class="product__buy">
                <img src="/images/tienda.png" alt="">
            </button>
        </section>
    </a>


    {{/each}}
</section>