<section class="store">
    <section class="store__top">
        <h1 class="indivi__header">Store Now</h1>
            <article class="indivi__btns">
            <button class="header__btn">
                <img src="images/filter.png" alt=""></a>
            </button> <button class="header__btn">
                <img src="images/sort.png" alt=""></a>
            </button>
            </article>
    </section>

        <section class="store__filter filters">
        <h2>Filter by</h2>
            <article class="filters__type">
                <a href="/store/type/Jordan" class="contextual__list">JORDAN</a>
                <a href="/store/type/Skate" class="contextual__list">SKATE</a>
                <a href="/store/type/Basketball" class="contextual__list">BASKETBALL</a>
            </article>
            <article class="filters__colors">
                    <a href="/store/colors/Black"><div class="filters__colors--item" style=" background-color: rgb(5, 5, 5)"></div></a>
                    <a href="/store/colors/White"><div class="filters__colors--item" style=" background-color: #E8E8E8" ></div></a>
                    <a href="/store/colors/Marron"><div class="filters__colors--item" style=" background-color: rgb(163, 33, 10)" ></div></a>
                    <a href="/store/colors/Blue"><div class="filters__colors--item" style=" background-color: #053cc5"></div></a>
                    <a href="/store/colors/Green"><div class="filters__colors--item" style=" background-color: rgb(45, 167, 56)"></div></a>
                    <a href="/store/colors/Starfish"><div class="filters__colors--item" style=" background-color: rgb(230, 126, 28)"></div></a>
            </article>
    </section>

    <section class="store__sort"> 
        <a href="/store/sort/price" class="contextual__list">PRICE</a>
        <a href="/store/sort/size" class="contextual__list">SIZE</a>
    </section>

    {{#each productsList}}

          <a href="/store/{{this.name}}" class="product">
        <!-- Detalles del producto -->

        {{!-- Imagen del producto --}}
        <section class="product__image">
        <img src="/images/{{this.images.[0]}}">
        </section>

        {{!-- Informacion del producto  --}}
        <section class="product__top"> 
      

            <article class="top__right">
                <h1 class="product__header"> {{this.name}}</h1>
                <h2 class="product__header"> {{this.category}}</h2>
                <h1 class="product__header">{{this.price}}</h1>
            </article>
            <article class="top__left">
               
                <button class="buy__btn">ADD TO BAG <i data-feather="shopping-bag"></i> </button>
  {{!-- Cargo el sricp que servira para esta plantilla --}}
            </article>
        </section>
    </a>


    {{/each}}
</section>