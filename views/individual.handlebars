  <!-- Imagen del producto y Galeria-->
   
  <section class="product__individual">
     
   <h1 class="product__header"> {{individual.name}}</h1>

        <section class="product__right">

            <img class="product__image" src="/images/{{individual.images.[0]}}">

            <article class="gallery__selector">

                <div class="gallery__mini"></div>
                <div class="gallery__mini"></div>
                <div class="gallery__mini"></div>
                <div class="gallery__mini"></div>
                {{!-- <div class="gallery__mini" style=" background-image: url(/imagenes/{{imagenes.[2]}})"></div> --}}
            </article>

        </section>
        <!-- Detalles del producto -->
        
        <section class="product__left left">
            <article class="left__top top">
            <h1 class="top__individual">{{individual.price}}</h1>
            <p class="top__individual">{{individual.colors}}</p>
            </article>
            <article class="left__info info">
            <p class="info__individual">{{individual.characteristic}} </p>
            <a class="info__individual">Read More...</a>
            <p class="info__individual">{{individual.characOne}} </p>
            <p class="info__individual">{{individual.characTwo}} </p>
            <p class="info__individual">{{individual.characThree}} </p>
            </article>
           
        </section>
       
    </section>
  